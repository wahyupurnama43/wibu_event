<div class="row">
  <div class="col-12">
    <div class="card mb-4">
      <div class="card-header pb-0">
        <div class="d-flex justify-content-between">
          <h6>Cosplayer Event List</h6>
          <button
            type="button"
            class="btn bg-gradient-primary"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            Tambah Cosplayer
          </button>
        </div>
      </div>
      <div class="card-body px-0 pt-0 pb-2">
        <div class="table-responsive p-0">
          <table class="table align-items-center justify-content-center mb-0">
            <thead>
              <tr>
                <th
                  class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                >
                  Nama Event
                </th>
                <th
                  class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                >
                  Nama Cosplayer
                </th>
                <th></th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Cosplayer</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form
        action="/cosplayer/store"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="modal-body">
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <label for="namaCosplayer">Nama Cosplayer</label>
                <select name="namaCosplayer" id="" class="form-control">
                  <option value="">Test</option>
                </select>
              </div>
            </div>

            <div class="col-lg-6">
              <div class="form-group">
                <label for="namaEvent">Nama Event</label>
                <select name="namaEvent" id="" class="form-control">
                  <option value="">Test</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn bg-gradient-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn bg-gradient-primary">
            Save changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill("#editor", {
    theme: "snow",
  });

  quill.on("text-change", function (delta, oldDelta, source) {
    document.querySelector("input[name='content']").value =
      quill.root.innerHTML;
  });

  function editEvent(id) {
    fetch(`/cosplayer/${id}`)
      .then((response) => response.json())
      .then((res) => {
        $("input[name='namaCosplayer']").val(res.nama_cosplayer);
        $("input[name='nomor_hp']").val(res.nomor_hp);
        let dateObject = new Date(res.tanggal_lahir);
        dateObject.setDate(dateObject.getDate() + 1);
        let formattedDate = dateObject.toISOString().split("T")[0];
        $("input[name='tanggal_lahir']").val(formattedDate);
        quill.pasteHTML(res.deskripsi_cosplayer);
        $("#exampleModal form").attr("action", `/cosplayer/update/${id}`);
        $("#exampleModal").modal("show");
      })
      .catch((error) => console.error("Error fetching event data:", error));
  }
</script>

<% if(messages.success){ %>
<script>
  Toastify({
    text: "<%= messages.success %>",
    className: "success",
    style: {
      background: "linear-gradient(to right, #00b09b, #00b09b)",
    },
  }).showToast();
</script>
<% } %>
