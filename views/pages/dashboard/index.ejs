<section>
  <div class="row">
    <% data.forEach(data => { %>
    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
      <div class="card">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-12">
              <div class="numbers">
                <img
                  src="/uploads/<%= data.gambar  %>"
                  alt=""
                  width="100%"
                  height="200px"
                  style="border-radius: 10px; margin-bottom: 20px"
                />
                <h5 class="font-weight-bolder"><%= data.nama_event %></h5>
                <p class="mb-0 text-sm">
                  <%- data.deskripsi_event.substring(0, 200); %>
                </p>
                <ul style="list-style: none; padding: 0">
                  <li>
                    <i class="fa-solid fa-location-dot"></i> <%=
                    data.lokasi_event %>
                  </li>
                  <li>
                    <i class="fa-solid fa-calendar-days"></i>
                    <%= data.tanggal_event.toLocaleDateString('el-GR') + ' - ' +
                    data.tanggal_selesai.toLocaleDateString('el-GR') %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
